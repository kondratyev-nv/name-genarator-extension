{
    "manifest_version": 3,
    "name": "Name Generator",
    "description": "Easy way to generate random names and save them for a later use!",
    "version": "0.3.0",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://randomuser.me/api/*",
        "https://uinames.com/api/*",
        "http://randomprofile.com/api/*"
    ],
    "short_name": "Name Generator"
}
